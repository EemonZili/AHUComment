/* Place Detail Page Styles */

.container {
  min-height: 100vh;
  background: var(--background);
  padding-bottom: 80px;
  animation: fadeIn 400ms ease-out;
}

@keyframes fadeIn {
  from {
    opacity: 0;
  }
  to {
    opacity: 1;
  }
}

.loadingContainer {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  min-height: 100vh;
  gap: var(--spacing-md);
}

.loadingText {
  font-size: var(--text-sm);
  color: var(--foreground-secondary);
  margin: 0;
}

/* Header */
.header {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  height: 60px;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 var(--spacing-md);
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(10px);
  box-shadow: var(--shadow-sm);
  z-index: var(--z-sticky);
  animation: slideDown 300ms ease-out;
}

@keyframes slideDown {
  from {
    transform: translateY(-100%);
  }
  to {
    transform: translateY(0);
  }
}

.backButton {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 40px;
  height: 40px;
  background: var(--background);
  border: none;
  border-radius: 50%;
  color: var(--foreground);
  cursor: pointer;
  transition: all var(--transition-base);
}

.backButton:hover {
  background: var(--ahu-navy-50);
  transform: scale(1.05);
}

.headerActions {
  display: flex;
  gap: var(--spacing-sm);
}

.iconButton {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 40px;
  height: 40px;
  background: var(--background);
  border: none;
  border-radius: 50%;
  color: var(--foreground);
  cursor: pointer;
  transition: all var(--transition-base);
}

.iconButton:hover {
  background: var(--ahu-navy-50);
  transform: scale(1.05);
}

.iconButton.favorited {
  color: var(--ahu-gold);
}

/* Image Carousel */
.carousel {
  position: relative;
  width: 100%;
  height: 400px;
  margin-top: 60px;
  overflow: hidden;
  background: var(--ahu-navy-900);
}

.carouselContainer {
  display: flex;
  height: 100%;
  transition: transform var(--transition-base);
}

.carouselImage {
  flex-shrink: 0;
  width: 100%;
  height: 100%;
  object-fit: cover;
  transition: transform var(--transition-base);
}

.carouselButton {
  position: absolute;
  top: 50%;
  transform: translateY(-50%);
  left: var(--spacing-md);
  width: 44px;
  height: 44px;
  display: flex;
  align-items: center;
  justify-content: center;
  background: rgba(255, 255, 255, 0.9);
  backdrop-filter: blur(4px);
  border: none;
  border-radius: 50%;
  color: var(--foreground);
  cursor: pointer;
  transition: all var(--transition-base);
  opacity: 0.8;
}

.carouselButton:hover {
  opacity: 1;
  transform: translateY(-50%) scale(1.1);
}

.carouselButtonNext {
  left: auto;
  right: var(--spacing-md);
}

.carouselIndicators {
  position: absolute;
  bottom: var(--spacing-lg);
  left: 50%;
  transform: translateX(-50%);
  display: flex;
  gap: var(--spacing-sm);
}

.indicator {
  width: 8px;
  height: 8px;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.5);
  cursor: pointer;
  transition: all var(--transition-base);
}

.indicator:hover {
  background: rgba(255, 255, 255, 0.8);
}

.indicator.active {
  width: 24px;
  border-radius: 4px;
  background: white;
}

/* Place Info */
.placeInfo {
  max-width: 1000px;
  margin: 0 auto;
  padding: var(--spacing-xl) var(--spacing-md);
  animation: fadeInUp 500ms ease-out;
}

@keyframes fadeInUp {
  from {
    transform: translateY(20px);
    opacity: 0;
  }
  to {
    transform: translateY(0);
    opacity: 1;
  }
}

.placeHeader {
  display: flex;
  align-items: flex-start;
  justify-content: space-between;
  gap: var(--spacing-lg);
  margin-bottom: var(--spacing-lg);
}

.placeName {
  font-size: var(--text-3xl);
  font-weight: var(--font-bold);
  color: var(--foreground);
  margin: 0 0 var(--spacing-sm);
  line-height: 1.2;
}

.placeCategory {
  display: inline-block;
  padding: var(--spacing-xs) var(--spacing-md);
  background: linear-gradient(135deg, var(--ahu-blue), var(--ahu-sky));
  color: white;
  border-radius: var(--radius-full);
  font-size: var(--text-sm);
  font-weight: var(--font-semibold);
}

.writeReviewButton {
  display: flex;
  align-items: center;
  gap: var(--spacing-xs);
  padding: var(--spacing-sm) var(--spacing-lg);
  background: var(--primary);
  color: white;
  border: none;
  border-radius: var(--radius-lg);
  font-size: var(--text-base);
  font-weight: var(--font-semibold);
  cursor: pointer;
  white-space: nowrap;
  transition: all var(--transition-base);
  box-shadow: var(--shadow-sm);
}

.writeReviewButton:hover {
  background: var(--ahu-navy-dark);
  transform: translateY(-2px);
  box-shadow: var(--shadow-md);
}

/* Rating Section */
.ratingSection {
  padding: var(--spacing-xl);
  background: var(--surface);
  border-radius: var(--radius-lg);
  box-shadow: var(--shadow-sm);
  margin-bottom: var(--spacing-xl);
}

.overallRating {
  display: flex;
  align-items: center;
  gap: var(--spacing-lg);
}

.ratingNumber {
  font-size: 64px;
  font-weight: var(--font-bold);
  color: var(--primary);
  line-height: 1;
}

.stars {
  display: flex;
  gap: 4px;
}

.starFilled {
  color: var(--ahu-gold);
}

.starEmpty {
  color: var(--border);
}

.reviewCount {
  font-size: var(--text-base);
  color: var(--foreground-secondary);
}

/* Details Section */
.detailsSection {
  display: flex;
  flex-direction: column;
  gap: var(--spacing-lg);
  padding: var(--spacing-xl);
  background: var(--surface);
  border-radius: var(--radius-lg);
  box-shadow: var(--shadow-sm);
  margin-bottom: var(--spacing-xl);
}

.detailItem {
  display: flex;
  gap: var(--spacing-md);
}

.detailIcon {
  flex-shrink: 0;
  color: var(--primary);
  margin-top: 2px;
}

.detailLabel {
  font-size: var(--text-sm);
  color: var(--foreground-secondary);
  margin-bottom: var(--spacing-xs);
}

.detailValue {
  font-size: var(--text-base);
  color: var(--foreground);
  font-weight: var(--font-medium);
}

/* Description Section */
.descriptionSection,
.facilitiesSection,
.tagsSection {
  padding: var(--spacing-xl);
  background: var(--surface);
  border-radius: var(--radius-lg);
  box-shadow: var(--shadow-sm);
  margin-bottom: var(--spacing-xl);
}

.sectionTitle {
  font-size: var(--text-lg);
  font-weight: var(--font-bold);
  color: var(--foreground);
  margin: 0 0 var(--spacing-md);
  padding-bottom: var(--spacing-sm);
  border-bottom: 2px solid var(--border);
}

.description {
  font-size: var(--text-base);
  color: var(--foreground-secondary);
  line-height: 1.8;
  margin: 0;
}

.facilitiesList,
.tagsList {
  display: flex;
  flex-wrap: wrap;
  gap: var(--spacing-sm);
}

.facilityTag {
  padding: var(--spacing-sm) var(--spacing-md);
  background: var(--ahu-navy-50);
  color: var(--primary);
  border: 2px solid var(--ahu-navy-100);
  border-radius: var(--radius-lg);
  font-size: var(--text-sm);
  font-weight: var(--font-medium);
}

.tag {
  padding: var(--spacing-xs) var(--spacing-md);
  background: linear-gradient(135deg, var(--ahu-navy-50), var(--background));
  color: var(--foreground);
  border-radius: var(--radius-full);
  font-size: var(--text-sm);
}

/* Rating Distribution */
.ratingDistribution {
  max-width: 1000px;
  margin: 0 auto;
  padding: var(--spacing-xl) var(--spacing-md);
  background: var(--surface);
  border-radius: var(--radius-lg);
  box-shadow: var(--shadow-sm);
  margin-bottom: var(--spacing-xl);
}

.ratingsContainer {
  display: flex;
  flex-direction: column;
  gap: var(--spacing-md);
}

.ratingBar {
  display: flex;
  align-items: center;
  gap: var(--spacing-md);
}

.ratingLabel {
  width: 48px;
  font-size: var(--text-sm);
  color: var(--foreground-secondary);
}

.barContainer {
  flex: 1;
  height: 8px;
  background: var(--ahu-navy-50);
  border-radius: var(--radius-full);
  overflow: hidden;
}

.barFill {
  height: 100%;
  background: linear-gradient(90deg, var(--ahu-gold), var(--ahu-gold-light, #FFD700));
  border-radius: var(--radius-full);
  transition: width var(--transition-base);
}

.ratingCount {
  width: 48px;
  text-align: right;
  font-size: var(--text-sm);
  color: var(--foreground-secondary);
}

/* Reviews Section */
.reviewsSection {
  max-width: 1000px;
  margin: 0 auto;
  padding: 0 var(--spacing-md) var(--spacing-xl);
}

.reviewsHeader {
  margin-bottom: var(--spacing-xl);
}

.emptyState {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: var(--spacing-3xl);
  gap: var(--spacing-md);
  background: var(--surface);
  border-radius: var(--radius-lg);
  box-shadow: var(--shadow-sm);
}

.emptyIcon {
  font-size: 64px;
  opacity: 0.5;
}

.emptyText {
  font-size: var(--text-base);
  color: var(--foreground-secondary);
  margin: 0;
}

.writeFirstReviewButton {
  padding: var(--spacing-sm) var(--spacing-xl);
  background: var(--primary);
  color: white;
  border: none;
  border-radius: var(--radius-lg);
  font-size: var(--text-base);
  font-weight: var(--font-semibold);
  cursor: pointer;
  transition: all var(--transition-base);
}

.writeFirstReviewButton:hover {
  background: var(--ahu-navy-dark);
  transform: translateY(-2px);
  box-shadow: var(--shadow-md);
}

.reviewsList {
  display: flex;
  flex-direction: column;
  gap: var(--spacing-lg);
}

.reviewCard {
  padding: var(--spacing-xl);
  background: var(--surface);
  border-radius: var(--radius-lg);
  box-shadow: var(--shadow-sm);
  cursor: pointer;
  transition: all var(--transition-base);
  animation: fadeInUp 400ms ease-out;
}

.reviewCard:hover {
  box-shadow: var(--shadow-md);
  transform: translateY(-4px);
}

.reviewHeader {
  display: flex;
  align-items: center;
  gap: var(--spacing-md);
  margin-bottom: var(--spacing-md);
}

.reviewUserAvatar {
  width: 48px;
  height: 48px;
  border-radius: 50%;
  object-fit: cover;
  border: 2px solid var(--ahu-navy-100);
}

.reviewUserInfo {
  flex: 1;
}

.reviewUserName {
  font-size: var(--text-base);
  font-weight: var(--font-semibold);
  color: var(--foreground);
  margin: 0 0 var(--spacing-xs);
}

.reviewTime {
  font-size: var(--text-xs);
  color: var(--foreground-secondary);
  margin: 0;
}

.reviewRating {
  margin-bottom: var(--spacing-md);
}

.reviewContent {
  font-size: var(--text-base);
  color: var(--foreground-secondary);
  line-height: 1.6;
  margin: 0 0 var(--spacing-md);
  display: -webkit-box;
  -webkit-line-clamp: 3;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.reviewImages {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: var(--spacing-sm);
  margin-bottom: var(--spacing-md);
  position: relative;
}

.reviewImage {
  width: 100%;
  height: 120px;
  object-fit: cover;
  border-radius: var(--radius-md);
}

.moreImages {
  position: absolute;
  bottom: var(--spacing-sm);
  right: var(--spacing-sm);
  background: rgba(0, 0, 0, 0.7);
  color: white;
  padding: var(--spacing-xs) var(--spacing-sm);
  border-radius: var(--radius-md);
  font-size: var(--text-sm);
  font-weight: var(--font-semibold);
}

.reviewStats {
  display: flex;
  align-items: center;
  gap: var(--spacing-lg);
  padding-top: var(--spacing-md);
  border-top: 1px solid var(--border);
}

.reviewStat {
  display: flex;
  align-items: center;
  gap: var(--spacing-xs);
  font-size: var(--text-sm);
  color: var(--foreground-muted);
}

/* Pagination */
.pagination {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: var(--spacing-md);
  margin-top: var(--spacing-xl);
}

.pageButton {
  padding: var(--spacing-sm) var(--spacing-lg);
  background: var(--surface);
  border: 2px solid var(--border);
  border-radius: var(--radius-md);
  font-size: var(--text-sm);
  font-weight: var(--font-medium);
  color: var(--foreground);
  cursor: pointer;
  transition: all var(--transition-base);
}

.pageButton:hover:not(:disabled) {
  background: var(--ahu-navy-50);
  border-color: var(--primary);
  color: var(--primary);
}

.pageButton:disabled {
  opacity: 0.5;
  cursor: not-allowed;
}

.pageNumbers {
  display: flex;
  gap: var(--spacing-xs);
}

.pageNumber {
  width: 40px;
  height: 40px;
  display: flex;
  align-items: center;
  justify-content: center;
  background: var(--surface);
  border: 2px solid var(--border);
  border-radius: var(--radius-md);
  font-size: var(--text-sm);
  font-weight: var(--font-medium);
  color: var(--foreground);
  cursor: pointer;
  transition: all var(--transition-base);
}

.pageNumber:hover {
  background: var(--ahu-navy-50);
  border-color: var(--primary);
  color: var(--primary);
}

.pageNumber.active {
  background: var(--primary);
  border-color: var(--primary);
  color: white;
}

/* Floating Action Button */
.fab {
  position: fixed;
  bottom: var(--spacing-xl);
  right: var(--spacing-xl);
  width: 60px;
  height: 60px;
  display: flex;
  align-items: center;
  justify-content: center;
  background: var(--primary);
  color: white;
  border: none;
  border-radius: 50%;
  box-shadow: 0 4px 12px rgba(27, 59, 89, 0.3);
  cursor: pointer;
  transition: all var(--transition-base);
  z-index: var(--z-modal);
  animation: bounceIn 500ms ease-out;
}

@keyframes bounceIn {
  0% {
    transform: scale(0);
    opacity: 0;
  }
  50% {
    transform: scale(1.1);
  }
  100% {
    transform: scale(1);
    opacity: 1;
  }
}

.fab:hover {
  background: var(--ahu-navy-dark);
  transform: scale(1.1) rotate(90deg);
  box-shadow: 0 6px 16px rgba(27, 59, 89, 0.4);
}

.fab:active {
  transform: scale(0.95) rotate(90deg);
}

/* Responsive */
@media (max-width: 768px) {
  .carousel {
    height: 300px;
  }

  .placeHeader {
    flex-direction: column;
    align-items: stretch;
  }

  .writeReviewButton {
    width: 100%;
    justify-content: center;
  }

  .placeName {
    font-size: var(--text-2xl);
  }

  .ratingNumber {
    font-size: 48px;
  }

  .overallRating {
    flex-direction: column;
    align-items: flex-start;
    gap: var(--spacing-md);
  }

  .reviewImages {
    grid-template-columns: 1fr;
  }

  .reviewImage {
    height: 200px;
  }

  .fab {
    bottom: var(--spacing-lg);
    right: var(--spacing-lg);
    width: 56px;
    height: 56px;
  }
}

@media (max-width: 480px) {
  .placeInfo,
  .ratingDistribution,
  .reviewsSection {
    padding-left: var(--spacing-sm);
    padding-right: var(--spacing-sm);
  }

  .detailsSection,
  .descriptionSection,
  .facilitiesSection,
  .tagsSection {
    padding: var(--spacing-md);
  }

  .pagination {
    flex-wrap: wrap;
  }

  .pageNumbers {
    flex-wrap: wrap;
  }
}
